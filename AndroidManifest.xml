<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cong89.matcalc"
    android:versionCode="1"
    android:versionName="BETA 1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.matcalc.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.matcalc.AboutActivity"
            android:label="@string/title_activity_about" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.matcalc.MainActivity" />
        </activity>
        <activity
            android:name="com.android.matcalc.HelpActivity"
            android:label="@string/title_activity_help" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.matcalc.MainActivity" />
        </activity>
    </application>

</manifest>